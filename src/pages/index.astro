---
import Layout from '../layouts/Layout.astro';
import FirstSection from '../components/FirstSection.astro';
import SecondSection from '../components/SecondSection.astro';
import ThirtSection from '../components/ThirtSection.astro';
import StaticHeader from '../components/Header.astro';
import Who from '../components/Who.astro';
import Porfolio from '../components/Portfolio.astro';
import Contact from '../components/Contact.astro';
import Experiencia from '../components/Experiencia.astro';
---

<Layout title="Construye">
	<StaticHeader/>
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
		<div class="snap-center">
			<FirstSection/>
		</div>
		<div class="snap-center">
			<Who/>
		</div>
		<div class="snap-center">
			<Experiencia/>
		</div>
		<div class="snap-center">
			<Porfolio/>
		</div>
		<div class="snap-center">
			<SecondSection/>
		</div>
		<div class="snap-center">
			<Contact/>
		</div>
		<div class="snap-center">
			<ThirtSection/>
		</div>
	</main>
</Layout>
